[Unit]
Description=AVUE Camera Streaming
After=network-online.target

[Service]
User=pi
WorkingDirectory=/home/pi/Code/avuePZT
ExecStart=/bin/bash -c 'cd /home/jdn/Code/avuePZT && ./avueVideo.sh'
StandardOutput=syslog
Restart=on-failure
WatchdogSec=30s
StartLimitInterval=5min
StartLimitBurst=4
StartLimitAction=reboot-force
NotifyAccess=all

[Install]
WantedBy=multi-user.target
Alias=avueVideo.service
