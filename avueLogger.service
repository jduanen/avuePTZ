[Unit]
Description=AVUE MQTT Logger
After=network-online.target

[Service]
User=pi
WorkingDirectory=/home/pi/Code/avuePZT
ExecStart=/bin/bash -c 'cd /home/pi/Code/avuePZT && python3 ./avueLogger.py -D'
StandardOutput=syslog
Restart=always
StartLimitInterval=5min
StartLimitBurst=4
StartLimitAction=none
NotifyAccess=all

[Install]
WantedBy=multi-user.target
Alias=avueLogger.service
